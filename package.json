{
  "name": "schichtkalender-bosch-rt",
  "version": "3.1.0",
  "description": "Listet alle Kontischichten von Bosch Reutlingen auf.",
  "homepage": "https://schichtkalender-rt.now.sh/",
  "private": true,
  "engines": {
    "node": ">=12.x"
  },
  "scripts": {
    "prepare": "snowpack",
    "dev": "cross-env NODE_ENV=development npm-run-all --parallel dev:*",
    "dev:server": "servor src --reload",
    "dev:style": "postcss ./tailwind.css -o src/style.css -w",
    "start": "serve src",
    "prestart": "npm run build",
    "build": "cross-env NODE_ENV=production npm-run-all build:style build:app build:legacy build:sw",
    "build:app": "snowpack --optimize --clean",
    "build:legacy": "rollup --config",
    "build:sw": "workbox generateSW workbox-config.js",
    "build:style": "postcss ./tailwind.css -o src/style.css",
    "test": "standard ./*.js src/*.js src/components/**/*.js src/lin/**/*.js && jest --coverage",
    "test:watch": "standard ./*.js src/*.js src/components/**/*.js src/lin/**/*.js && jest --watch",
    "update:holidays": "node ./updateHolidays.js"
  },
  "keywords": [],
  "license": "MPL",
  "author": "Christopher Astfalk",
  "standard": {
    "parser": "babel-eslint",
    "env": [
      "jest",
      "es6"
    ]
  },
  "jest": {
    "setupFiles": [
      "./test/setup.js"
    ],
    "testURL": "http://localhost:8080",
    "transform": {
      "^.+\\.jsx?$": "babel-jest"
    },
    "moduleNameMapper": {
      "^react$": "preact/compat",
      "^react-dom$": "preact/compat"
    },
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}"
    ]
  },
  "snowpack": {
    "webDependencies": [
      "hammerjs",
      "htm",
      "luxon",
      "preact",
      "preact/compat",
      "preact/hooks",
      "preact-router",
      "querystringify",
      "re-reselect"
    ],
    "installOptions": {
      "dest": "src/web_modules"
    }
  },
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.9.0",
    "@babel/plugin-proposal-class-properties": "^7.8.3",
    "@babel/preset-env": "^7.9.0",
    "@babel/preset-react": "^7.9.4",
    "@fullhuman/postcss-purgecss": "^2.1.0",
    "@rollup/plugin-node-resolve": "^7.1.1",
    "@testing-library/preact": "^1.0.2",
    "autoprefixer": "^9.7.5",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^25.2.6",
    "core-js": "^3.6.4",
    "cross-env": "^7.0.2",
    "hammerjs": "^2.0.8",
    "jest": "^25.2.7",
    "luxon": "^1.23.0",
    "mkdirp": "^1.0.4",
    "node-ical": "^0.10.0",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^7.1.0",
    "prompt": "^1.0.0",
    "querystringify": "^2.1.1",
    "re-reselect": "^3.4.0",
    "regenerator-runtime": "^0.13.5",
    "reselect": "^4.0.0",
    "rollup": "^2.3.3",
    "rollup-plugin-babel": "^4.4.0",
    "servor": "^3.2.0",
    "sinon": "^9.0.1",
    "sinon-chai": "^3.5.0",
    "snowpack": "^1.6.0",
    "standard": "^14.3.3",
    "workbox-cli": "^5.1.2"
  },
  "dependencies": {
    "htm": "^3.0.3",
    "preact": "^10.3.4",
    "preact-render-to-string": "^5.1.4",
    "preact-router": "^3.2.1",
    "proptypes": "^1.0.0",
    "serve": "^11.3.0",
    "tailwindcss": "^1.2.0"
  }
}
