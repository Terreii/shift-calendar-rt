{
  "root": true,
  "env": {
    "browser": true,
    "jest": true,
    "es2022": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:jest/recommended",
    "next/core-web-vitals"
  ],
  "plugins": ["testing-library"],
  "overrides": [
    // Only uses Testing Library lint rules in test files
    {
      "files": [
        "**/__tests__/**/*.[jt]s?(x)",
        "**/?(*.)+(spec|test).[jt]s?(x)"
      ],
      "extends": ["plugin:testing-library/react"]
    }
  ]
}
